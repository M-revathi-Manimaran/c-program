#include <stdio.h>
#include <string.h>

/* Structure to store bus ticket details */
struct BusTicket {
    int ticketNo;
    char passengerName[50];
    char source[30];
    char destination[30];
    float fare;
};

int main() {
    int n, i;

    printf("Enter number of bus tickets: ");
    scanf("%d", &n);

    struct BusTicket tickets[n];

    for (i = 0; i < n; i++) {
        printf("\nEnter details of ticket %d\n", i + 1);

        printf("Ticket Number: ");
        scanf("%d", &tickets[i].ticketNo);

        printf("Passenger Name: ");
        scanf(" %[^\n]s", tickets[i].passengerName);

        printf("Source: ");
        scanf(" %[^\n]s", tickets[i].source);

        printf("Destination: ");
        scanf(" %[^\n]s", tickets[i].destination);

        printf("Fare: ");
        scanf("%f", &tickets[i].fare);
    }

    printf("\n--- Bus Ticket Details ---\n");
    for (i = 0; i < n; i++) {
