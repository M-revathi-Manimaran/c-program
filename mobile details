#include <stdio.h>
#include <string.h>

/* Structure to store mobile details */
struct Mobile {
    char brand[50];
    char model[50];
    float price;
    int stock;
};

int main() {
    int n, i;

    printf("Enter number of mobile phones: ");
    scanf("%d", &n);

    struct Mobile mobiles[n];

    for (i = 0; i < n; i++) {
        printf("\nEnter details of mobile %d\n", i + 1);

        printf("Brand: ");
        scanf(" %[^\n]s", mobiles[i].brand); // read string with spaces

        printf("Model: ");
        scanf(" %[^\n]s", mobiles[i].model);

        printf("Price: ");
        scanf("%f", &mobiles[i].price);

        printf("Stock Quantity: ");
        scanf("%d", &mobiles[i].stock);
    }

    printf("\n--- Mobile Details ---\n");
    for (i = 0; i < n; i++) {
        printf("\nMobile %d\n", i + 1);
        printf("Brand : %s\n", mobiles[i].brand);
        printf("Model : %s\n", mobiles[i].model);
        printf("Price : %.2f\n", mobiles[i].price);
        printf("Stock : %d\n", mobiles[i].stock);
    }

    return 0;
}
