#include <stdio.h>
#include <string.h>

/* Structure definition */
struct Student {
    int rollNo;
    char name[50];
};

int main() {
    int i, n, newRecords;

    printf("Enter number of existing records: ");
    scanf("%d", &n);

    struct Student students[100];   // maximum size

    /* Input existing records */
    for (i = 0; i < n; i++) {
        printf("\nEnter details of student %d\n", i + 1);

        printf("Roll No: ");
        scanf("%d", &students[i].rollNo);

        printf("Name: ");
        scanf(" %[^\n]s", students[i].name);
    }

    printf("\nEnter number of new records to add: ");
    scanf("%d", &newRecords);

    /* Add new records */
    for (i = n; i < n + newRecords; i++) {
        printf("\nEnter details of new student %d\n", i + 1);

        printf("Roll No: ");
        scanf("%d", &students[i].rollNo);

        printf("Name: ");
        scanf(" %[^\n]s", students[i].name);
    }

    n = n + newRecords;   // update total record count

    /* Display updated list */
    printf("\n--- Updated Student List ---\n");
    for (i = 0; i < n; i++) {
        printf("\nStudent %d\n", i + 1);
        printf("Roll No: %d\n", students[i].rollNo);
        printf("Name   : %s\n", students[i].name);
    }

    return 0;
}
