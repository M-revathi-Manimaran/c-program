#include <stdio.h>
#include <string.h>

/* Structure to store book details */
struct Book {
    char title[100];
    char author[50];
    int bookID;
    int quantity;
};

int main() {
    int n, i;

    printf("Enter number of books: ");
    scanf("%d", &n);

    struct Book library[n];

    for (i = 0; i < n; i++) {
        printf("\nEnter details of book %d\n", i + 1);

        printf("Book Title: ");
        scanf(" %[^\n]s", library[i].title);  // read string with spaces

        printf("Author: ");
        scanf(" %[^\n]s", library[i].author);

        printf("Book ID: ");
        scanf("%d", &library[i].bookID);

        printf("Quantity: ");
        scanf("%d", &library[i].quantity);
    }

    printf("\n--- Library Book Details ---\n");
    for (i = 0; i < n; i++) {
        printf("\nBook %d\n", i + 1);
        printf("Title   : %s\n", library[i].title);
        printf("Author  : %s\n", library[i].author);
        printf("Book ID : %d\n", library[i].bookID);
        printf("Quantity: %d\n", library[i].quantity);
    }

    return 0;
}
