#include <stdio.h>
#include <string.h>

/* Structure to store product details */
struct Product {
    char name[50];
    int productID;
    float price;
    int quantity;
};

/* Function to display product details */
void displayProduct(struct Product p) {
    printf("\nProduct Name : %s\n", p.name);
    printf("Product ID   : %d\n", p.productID);
    printf("Price        : %.2f\n", p.price);
    printf("Quantity     : %d\n", p.quantity);
}

int main() {
    int n, i;
    printf("Enter number of products: ");
    scanf("%d", &n);

    struct Product products[n];

    // Input product details
    for (i = 0; i < n; i++) {
        printf("\nEnter details of product %d\n", i + 1);

        printf("Product Name: ");
        scanf(" %[^\n]s", products[i].name); // read string with spaces

        printf("Product ID: ");
        scanf("%d", &products[i].productID);

        printf("Price: ");
        scanf("%f", &products[i].price);

        printf("Quantity: ");
        scanf("%d", &products[i].quantity);
    }

    // Display all products
    printf("\n--- Product Details ---\n");
    for (i = 0; i < n; i++) {
        displayProduct(products[i]);
    }

    return 0;
}
