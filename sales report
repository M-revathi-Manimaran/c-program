#include <stdio.h>

int main() {
    int days, i;
    float sales[30], total = 0;

    printf("Enter number of days: ");
    scanf("%d", &days);

    printf("Enter daily sales:\n");
    for (i = 0; i < days; i++) {
        printf("Day %d sales: ", i + 1);
        scanf("%f", &sales[i]);
        total += sales[i];
    }

    printf("\n--- Sales Report ---\n");
    for (i = 0; i < days; i++) {
        printf("Day %d : %.2f\n", i + 1, sales[i]);
    }

    printf("\nTotal Sales = %.2f\n", total);

    return 0;
}
