#include <stdio.h>
#include <string.h>

#define MAX 100

/* Structure definition */
struct Item {
    int itemID;
    char name[50];
    int quantity;
    float price;
};

int main() {
    struct Item inventory[MAX];
    int choice, count = 0, i, searchID, found;
    
    do {
        printf("\n--- Inventory Management System ---\n");
        printf("1. Add Item\n");
        printf("2. Display Items\n");
        printf("3. Search Item by ID\n");
        printf("4. Update Item\n");
        printf("5. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch(choice) {

            /* Add item */
            case 1:
                printf("\nEnter Item ID: ");
                scanf("%d", &inventory[count].itemID);

                printf("Enter Item Name: ");
                scanf(" %[^\n]s", inventory[count].name);

                printf("Enter Quantity: ");
                scanf("%d", &inventory[count].quantity);

                printf("Enter Price: ");
                scanf("%f", &inventory[count].price);

                count++;
                printf("Item added successfully!\n");
                break;

            /* Display items */
            case 2:
                if (count == 0) {
                    printf("\nNo items in inventory.\n");
                } else {
                    printf("\n--- Inventory List ---\n");
                    for (i = 0; i < count; i++) {
                        printf("\nItem %d\n", i + 1);
                        printf("ID       : %d\n", inventory[i].itemID);
                        printf("Name     : %s\n", inventory[i].name);
                        printf("Quantity : %d\n", inventory[i].quantity);
                        printf("Price    : %.2f\n", inventory[i].price);
                    }
                }
                break;

            /* Search item */
            case 3:
                printf("\nEnter Item ID to search: ");
                scanf("%d", &searchID);
                found = 0;

                for (i = 0; i < count; i++) {
                    if (inventory[i].itemID == searchID) {
                        printf("\nItem Found!\n");
                        printf("ID       : %d\n", inventory[i].itemID);
                        printf("Name     : %s\n", inventory[i].name);
                        printf("Quantity : %d\n", inventory[i].quantity);
                        printf("Price    : %.2f\n", inventory[i].price);
                        found = 1;
                        break;
                    }
                }
                if (!found)
                    printf("Item not found.\n");
                break;

            /* Update item */
            case 4:
                printf("\nEnter Item ID to update: ");
                scanf("%d", &searchID);
                found = 0;

                for (i = 0; i < count; i++) {
                    if (inventory[i].itemID == searchID) {
                        printf("Enter new Quantity: ");
                        scanf("%d", &inventory[i].quantity);

                        printf("Enter new Price: ");
                        scanf("%f", &inventory[i].price);

                        printf("Item updated successfully!\n");
                        found = 1;

                        printf("\n--- Updated Item ---\n");
                        printf("ID       : %d\n", inventory[i].itemID);
                        printf("Name     : %s\n", inventory[i].name);
                        printf("Quantity : %d\n", inventory[i].quantity);
                        printf("Price    : %.2f\n", inventory[i].price);
                        break;
                    }
                }
                if (!found)
                    printf("Item not found.\n");
                break;

            case 5:
                printf("\nExiting program.\n");
                break;

            default:
                printf("\nInvalid choice!\n");
        }

    } while (choice != 5);

    return 0;
}
