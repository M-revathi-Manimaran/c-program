#include <stdio.h>
#include <string.h>

/* Structure to store course details */
struct Course {
    int courseID;
    char courseName[50];
    char instructor[50];
    int duration;      // in hours
    float fees;
};

int main() {
    int n, i;

    printf("Enter number of courses: ");
    scanf("%d", &n);

    struct Course courses[n];

    for (i = 0; i < n; i++) {
        printf("\nEnter details of course %d\n", i + 1);

        printf("Course ID: ");
        scanf("%d", &courses[i].courseID);

        printf("Course Name: ");
        scanf(" %[^\n]s", courses[i].courseName);

        printf("Instructor Name: ");
        scanf(" %[^\n]s", courses[i].instructor);

        printf("Duration (in hours): ");
        scanf("%d", &courses[i].duration);

        printf("Fees: ");
        scanf("%f", &courses[i].fees);
    }

    printf("\n--- Course Details ---\n");
    for (i = 0; i < n; i++) {
        printf("\nCourse %d\n", i + 1);
        printf("Course ID   : %d\n", courses[i].courseID);
        printf("Course Name : %s\n", courses[i].courseName);
        printf("Instructor  : %s\n", courses[i].instructor);
        printf("Duration    : %d hours\n", courses[i].duration);
        printf("Fees        : %.2f\n", courses[i].fees);
    }

    return 0;
}
