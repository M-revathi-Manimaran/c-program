#include <stdio.h>

int main() {
    int n, i;
    int marks[50];
    int maxMarks, topperIndex = 0;

    printf("Enter number of students: ");
    scanf("%d", &n);

    for (i = 0; i < n; i++) {
        printf("Enter marks of student %d: ", i + 1);
        scanf("%d", &marks[i]);
    }

    maxMarks = marks[0];

    for (i = 1; i < n; i++) {
        if (marks[i] > maxMarks) {
            maxMarks = marks[i];
            topperIndex = i;
        }
    }

    printf("\nTopper of the class:\n");
    printf("Student %d with marks %d\n", topperIndex + 1, maxMarks);

    return 0;
}
