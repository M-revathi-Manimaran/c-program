#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main() {
    char password[50];
    int i, hasUpper = 0, hasLower = 0, hasDigit = 0, hasSpecial = 0;

    printf("Enter password: ");
    scanf("%s", password);

    if (strlen(password) < 8) {
        printf("Password is too short. Must be at least 8 characters.\n");
        return 0;
    }

    for (i = 0; password[i] != '\0'; i++) {
        if (isupper(password[i])) hasUpper = 1;
        else if (islower(password[i])) hasLower = 1;
        else if (isdigit(password[i])) hasDigit = 1;
        else hasSpecial = 1;  // assuming any non-alphanumeric is special
    }

    if (hasUpper && hasLower && hasDigit && hasSpecial)
        printf("Password is valid.\n");
    else {
        printf("Password is invalid. It must contain:\n");
        if (!hasUpper) printf("- At least one uppercase letter\n");
        if (!hasLower) printf("- At least one lowercase letter\n");
        if (!hasDigit) printf("- At least one digit\n");
        if (!hasSpecial) printf("- At least one special character\n");
    }

    return 0;
}
